{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://enterprise-l-h.onrender.com/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ],
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}